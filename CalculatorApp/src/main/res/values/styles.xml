<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="equalsBtnStyle" parent="btnStyle">
        <item name="android:background">@drawable/shape_btn_equals</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="btnActionsStyle" parent="btnStyle">
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="btnHistoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.Theme.DevTools.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>